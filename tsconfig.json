{
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs", 
    "rootDir": ".",
    "outDir": "dist/", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
  }
}